{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2019", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"],
      "*": ["node_modules/*"]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*", "./src/**/*.test.ts"],
  "exclude": ["./src/public/"]
}
